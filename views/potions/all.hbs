<div class="jumbotron">
    {{#each messages}}
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        {{this}}
    </div>
    {{/each}}

    <div class="page-header">
        <h1>Managing potions</h1>
    </div>

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Effect</th>
                <th>Ingredients</th>
                <th>Uploader</th>
                <th>Date</th>
                <th>Status</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>   
        </thead>
        <tbody>
            {{#each potions}}
            <tr>
                <td>{{name}}</td>
                <td>{{effect}}</td>
                <td>{{ingredients}}</td>
                <td>{{user.username}}</td>
                <td>{{date}}</td>
                <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
                <td><a class="btn btn-primary btn-sm" href="/potions/all/edit/{{id}}" role="button">Edit</a></td>
                <td><a class="btn btn-danger btn-sm" href="/potions/all/delete/{{id}}" role="button">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>