<div class="jumbotron">
    <div class="page-header">
        <h1>Add new potion recipe</h1>
    </div>
                    
    <form class="form-horizontal" method="post">
        <fieldset>
            <div class="form-group 
                {{#if validationErrors.name}}
                    has-error
                {{/if}}
            ">
                <label for="name" class="col-lg-2 control-label">Name</label>
                <div class="col-lg-10">
                    <input class="form-control" id="name" name="name" placeholder="e.g. Polyjuice Potion" type="text" value="{{data.name}}">
                    {{#if validationErrors.name}}
                        <span class="help-block">{{validationErrors.name.msg}}</span>
                    {{/if}}
                </div>
            </div>
            <div class="form-group
                {{#if validationErrors.effect}}
                    has-error
                {{/if}}
            ">
                <label for="effect" class="col-lg-2 control-label">Effect</label>
                <div class="col-lg-10">
                    <input class="form-control" id="effect" name="effect" placeholder="e.g. changes your appearance" type="text" value="{{data.effect}}">
                    <span class="help-block">Helps categorize your potion</span>
                    {{#if validationErrors.effect}}
                        <span class="help-block">{{validationErrors.effect.msg}}</span>
                    {{/if}}
                </div>
            </div>
            <div class="form-group 
                {{#if validationErrors.ingredients}}
                    has-error
                {{/if}}
            ">
                <label for="ingredients" class="col-lg-2 control-label">Ingredients</label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="3" id="ingredients" name="ingredients"  placeholder="e.g. Boomslang Skin, Bezoar, Unicorn Horn">{{data.ingredients}}</textarea>
                    <span class="help-block">Best list the required ingredients continuously, separated by a comma.</span>
                    {{#if validationErrors.ingredients}}
                        <span class="help-block">{{validationErrors.ingredients.msg}}</span>
                    {{/if}}
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>