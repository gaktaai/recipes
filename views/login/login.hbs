 <div class="jumbotron">
    {{#each errorMessages}}
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        {{this}}
    </div>
    {{/each}}
    
    <div class="page-header">
        <h1>Login to Potion Collector</h1>
    </div>
    
    <form class="form-horizontal" method="post">
        <fieldset>
            <div class="form-group {{#if validationErrors.username}}
                    has-error
                {{/if}}">
                <label for="username" class="col-lg-2 control-label">Username</label>
                <div class="col-md-6 col-lg-6">
                    <input class="form-control" id="username" name="username" placeholder="pl. FabulousUser16" type="text" value="{{data.username}}">
                </div>
            </div>
            <div class="form-group {{#if validationErrors.password}}
                    has-error
                {{/if}}">
                <label for="password" class="col-lg-2 control-label">Password</label>
                <div class="col-md-6 col-lg-6">
                    <input class="form-control" id="password" name="password" type="password">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 col-lg-6 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/login/signup"><button type="button" class="btn btn-primary">Sign up</button></a>
                </div>
            </div>
        </fieldset>
    </form>
</div>